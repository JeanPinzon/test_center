<!DOCTYPE html>
<html ng-app="testCenter">
<head>
  <title>CWI - Test</title>
  <link rel="stylesheet" type="text/css" href="vendor/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="assets/css/base.css">
</head>
<body ng-controller="homeController as homeCtrl">
  <h3>Test Center</h3>

  <div class="container">

    <div id="exTab2" class="container">
      <ul class="nav nav-tabs">
        <li class="active">
          <a  href="#candidateTab" data-toggle="tab">Candidato</a>
        </li>
        <li><a href="#qualityTab" data-toggle="tab">Qualidade</a>
        </li>
        <li><a href="#maintainabilityTab" data-toggle="tab">Manutenção</a>
        </li>
        <li><a href="#readabilityTab" data-toggle="tab">Legibilidade</a>
        </li>
        <li><a href="#endTab" data-toggle="tab">Concluir</a>
        </li>
      </ul>

      <div class="tab-content ">
        <div class="tab-pane active" id="candidateTab">
          <div class="container">
            <div class="form-group">
              <label>Nome:</label>
              <input ng-model="homeCtrl.test.name" type="text" class="form-control" placeholder="Nome">
            </div>
          </div>
        </div>

        <div class="tab-pane" id="qualityTab">
          <div class="container">
            <div class="form-group col-sm-6">
              <label>Orientação a objetos:</label>
              <select ng-model="homeCtrl.test.quality.oo"
                      class="form-control"
                      ng-options="option.value as option.text for option in homeCtrl.defaultOptions">
              </select>
            </div>

            <div class="form-group col-sm-6">
              <label>Observação:</label>
              <textarea class="form-control" rows="1"></textarea>
            </div>

            <div class="form-group col-sm-6">
              <label>Inteligência:</label>
              <select ng-model="homeCtrl.test.quality.intelligence"
                      class="form-control"
                      ng-options="option.value as option.text for option in homeCtrl.defaultOptions">
              </select>
            </div>

            <div class="form-group col-sm-6">
              <label>Observação:</label>
              <textarea class="form-control" rows="1"></textarea>
            </div>

            <div class="form-group col-sm-6">
              <label>Tratamento de Exceções:</label>
              <select ng-model="homeCtrl.test.quality.exceptionHandling"
                      class="form-control"
                      ng-options="option.value as option.text for option in homeCtrl.defaultOptions">
              </select>
            </div>

            <div class="form-group col-sm-6">
              <label>Observação:</label>
              <textarea class="form-control" rows="1"></textarea>
            </div>

            <div class="form-group col-sm-6">
              <label>Repetição de código:</label>
              <select ng-model="homeCtrl.test.quality.duplicatedCode"
                      class="form-control"
                      ng-options="option.value as option.text for option in homeCtrl.defaultOptions">
              </select>
            </div>

            <div class="form-group col-sm-6">
              <label>Observação:</label>
              <textarea class="form-control" rows="1"></textarea>
            </div>

            <div class="form-group col-sm-6">
              <label>Testes automatizados:</label>
              <select ng-model="homeCtrl.test.quality.automatedTests"
                      class="form-control"
                      ng-options="option.value as option.text for option in homeCtrl.automatedTestsOptions">
              </select>
            </div>

            <div class="form-group col-sm-6">
              <label>Observação:</label>
              <textarea class="form-control" rows="1"></textarea>
            </div>
          </div>
        </div>

        <div class="tab-pane" id="maintainabilityTab">
          <div class="container">
            <div class="form-group col-sm-6">
              <label>Alterar formato de entrada:</label>
              <select ng-model="homeCtrl.test.maintainability.inputFormat"
                      class="form-control"
                      ng-options="option.value as option.text for option in homeCtrl.defaultOptions">
              </select>
            </div>

            <div class="form-group col-sm-6">
              <label>Observação:</label>
              <textarea class="form-control" rows="1"></textarea>
            </div>

            <div class="form-group col-sm-6">
              <label>Adicionar operações:</label>
              <select ng-model="homeCtrl.test.quality.oo"
                      class="form-control"
                      ng-options="option.value as option.text for option in homeCtrl.defaultOptions">
              </select>
            </div>

            <div class="form-group col-sm-6">
              <label>Observação:</label>
              <textarea class="form-control" rows="1"></textarea>
            </div>

            <div class="form-group col-sm-6">
              <label>Alterar o formato de saída:</label>
              <select ng-model="homeCtrl.test.quality.oo"
                      class="form-control"
                      ng-options="option.value as option.text for option in homeCtrl.defaultOptions">
              </select>
            </div>

            <div class="form-group col-sm-6">
              <label>Observação:</label>
              <textarea class="form-control" rows="1"></textarea>
            </div>

            <div class="form-group col-sm-6">
              <label>Ano bissexto:</label>
                <select ng-model="homeCtrl.test.quality.oo"
                        class="form-control"
                        ng-options="option.value as option.text for option in homeCtrl.defaultOptions">
                </select>
            </div>

            <div class="form-group col-sm-6">
              <label>Observação:</label>
              <textarea class="form-control" rows="1"></textarea>
            </div>

            <div class="form-group col-sm-6">
              <label>Manutenabilidade:</label>
              <select class="form-control">
                <option>Selecione</option>
                <option>0 - Péssimo</option>
                <option>20 - Ruim</option>
                <option>50 - OK</option>
                <option>70 - Excelente</option>
              </select>
            </div>

            <div class="form-group col-sm-6">
              <label>Observação:</label>
              <textarea class="form-control" rows="1"></textarea>
            </div>
          </div>
        </div>
        <div class="tab-pane" id="readabilityTab">
          <div class="container">
            <div class="form-group col-sm-6">
              <label>Variaveis:</label>
              <select ng-model="homeCtrl.test.quality.oo"
                      class="form-control"
                      ng-options="option.value as option.text for option in homeCtrl.defaultOptions">
              </select>
            </div>

            <div class="form-group col-sm-6">
              <label>Observação:</label>
              <textarea class="form-control" rows="1"></textarea>
            </div>

            <div class="form-group col-sm-6">
              <label>Métodos:</label>
              <select ng-model="homeCtrl.test.quality.oo"
                      class="form-control"
                      ng-options="option.value as option.text for option in homeCtrl.defaultOptions">
              </select>
            </div>

            <div class="form-group col-sm-6">
              <label>Observação:</label>
              <textarea class="form-control" rows="1"></textarea>
            </div>

            <div class="form-group col-sm-6">
              <label>Comentários:</label>
              <select ng-model="homeCtrl.test.quality.oo"
                      class="form-control"
                      ng-options="option.value as option.text for option in homeCtrl.defaultOptions">
              </select>
            </div>

            <div class="form-group col-sm-6">
              <label>Observação:</label>
              <textarea class="form-control" rows="1"></textarea>
            </div>
          </div>
        </div>
        <div class="tab-pane" id="endTab">
          <div class="container">
            <div class="form-group">
              <label>E-mail para envio:</label>
              <input type="text" class="form-control" placeholder="Email para envio">
            </div>
            <div class="form-group">
              <button type="button" class="btn btn-success">Finalizar Avaliação</button>
            </div>
            <code ng-bind="homeCtrl.test | json"></code>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript" src="vendor/jquery/dist/jquery.min.js"></script>
  <script type="text/javascript" src="vendor/bootstrap/dist/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="vendor/angular/angular.min.js"></script>

  <script type="text/javascript" src="app.js"></script>

  <script type="text/javascript" src="home/homeController.js"></script>
</body>
</html>
